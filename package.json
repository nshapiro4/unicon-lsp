{
	"name": "unicon-lsp",
	"displayName": "Unicon Helper",
	"description": "Unicon Programming Language LSP",
	"author": "Unicon LSP Team",
	"license": "MIT",
	"version": "0.6.0",
	"publisher": "jafar",
	"contributes" : {
		"languages": [{
			"id" : "unicon",
			"extensions" : [ ".icn" ],
			"aliases" : [ "Unicon", "unicon", "icon" ]
		}],
    	"commands": [
      	  {
        	"command": "extension.loadLsifFile",
        	"title": "Load LSIF File"
      	  }
    	]
	},
	"activationEvents": [
		"onLanguage:unicon"
	],
	"main": "./out/extension",
	"keywords" : [
		"Unicon",
		"Icon",
		"SNOBOL"
	],
	"categories": [
        "Programming Languages"
    ],
	"repository": {
		"type": "git",
		"url": "https://github.com/HereBeCode/unicon-lsp"
	},
	
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w"
	},
	"engines": {
		"vscode": "^1.73.0"
	},
	"dependencies": {
		"vscode-languageclient": "^8.0.2"
	},
	"devDependencies": {
		"@types/vscode": "^1.73.0",
		"@types/node": "^16.11.7",
		"typescript": "^4.7.2"
	}
}


